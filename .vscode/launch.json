{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend: Flask API",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "flask",
            "cwd": "${workspaceFolder}",
            "args": [
                "--app",
                "greektax.backend.app:create_app",
                "run",
                "--host",
                "127.0.0.1",
                "--port",
                "5000",
                "--no-debugger",
                "--no-reload"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "FLASK_DEBUG": "1"
            },
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Backend: Attach to running API",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
            "justMyCode": true
        },
        {
            "name": "Tests: Pytest (workspace)",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "tests"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "justMyCode": false,
            "purpose": [
                "debug-test"
            ]
        },
        {
            "name": "Tests: Pytest (file)",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "${relativeFile}"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "justMyCode": false,
            "purpose": [
                "debug-test"
            ]
        },
        {
            "name": "Tests: Pytest (-k filter)",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "-k",
                "${input:pytestFilter}",
                "tests"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "justMyCode": false
        },
        {
            "name": "Scripts: Validate config",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceFolder}/scripts/validate_config.py",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "justMyCode": true
        },
        {
            "name": "Scripts: Embed translations",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceFolder}/scripts/embed_translations.py",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "justMyCode": true
        },
        {
            "name": "Scripts: Performance snapshot",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceFolder}/scripts/performance_snapshot.py",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "justMyCode": true
        },
        {
            "name": "Python: Current file",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "pytestFilter",
            "type": "promptString",
            "description": "Pytest -k expression",
            "default": "integration"
        }
    ]
}
