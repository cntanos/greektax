{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API: Flask dev server",
            "type": "debugpy",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "flask",
            "cwd": "${workspaceFolder}",
            "args": [
                "--app",
                "greektax.backend.app:create_app",
                "run",
                "--host",
                "127.0.0.1",
                "--port",
                "5000",
                "--no-debugger",
                "--no-reload"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "FLASK_DEBUG": "1"
            },
            "jinja": true,
            "justMyCode": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Tests: Pytest (workspace)",
            "type": "debugpy",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "tests"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": false,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "purpose": [
                "debug-test"
            ]
        },
        {
            "name": "Tests: Pytest (-k filter)",
            "type": "debugpy",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "module": "pytest",
            "cwd": "${workspaceFolder}",
            "args": [
                "-k",
                "${input:pytestFilter}",
                "tests"
            ],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": false,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Maintenance: Validate year configs",
            "type": "debugpy",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${workspaceFolder}/scripts/validate_config.py",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Python: Current File (workspace)",
            "type": "debugpy",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "justMyCode": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ],
    "inputs": [
        {
            "id": "pytestFilter",
            "type": "promptString",
            "description": "pytest -k expression to match",
            "default": "integration"
        }
    ]
}
