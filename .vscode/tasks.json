{
  "$schema": "https://raw.githubusercontent.com/microsoft/vscode/main/extensions/configuration-editing/schemas/vscode-tasks.schema.json",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run pytest",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "pytest"],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Lint (ruff)",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "ruff", "check", "src", "tests"],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Type check (mypy)",
      "type": "shell",
      "command": "${config:python.defaultInterpreterPath}",
      "args": ["-m", "mypy", "src"],
      "group": "test",
      "problemMatcher": []
    }
  ]
}
